<h1>Analítics</h1>
<script src="http://maps.google.com/maps/api/js?sensor=false&libraries=geometry&v=3.7"></script>
<script src="/assets/admin/google-map/matplace-advanced.js"></script>
<div class="row">
  <div class="col-md-4">
    <div class="mini-stat clearfix">
      <span class="mini-stat-icon orange"><i class="fa fa-tag"></i></span>
      <div class="mini-stat-info">
        <span><%= @pending %></span>
        Incidencias Pendientes
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="mini-stat clearfix">
      <span class="mini-stat-icon tar"><i class="fa fa-tag"></i></span>
      <div class="mini-stat-info">
        <span><%= @process %></span>
        Incidencias en proceso
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="mini-stat clearfix">
      <span class="mini-stat-icon pink"><i class="fa fa-tag"></i></span>
      <div class="mini-stat-info">
        <span><%= @solve %></span>
        Incidencias resueltas
      </div>
    </div>
  </div>
</div>
<% if  scope_permission('zones','view_all') %>
<div class="row">
  <div class="col-sm-12">
    <div class="btn-group">
      <button class="btn btn-white" type="button">Ver zonas</button>
      <button data-toggle="dropdown" class="btn btn-white dropdown-toggle" type="button" aria-expanded="false"><span class="caret"></span></button>
      <ul role="menu" class="dropdown-menu">
        <% if  scope_permission('zones','create') %>
        <li><%= link_to "Administrar zonas", new_zone_path %></li>
        <%end%>
        <li class="divider"></li>
        <% @zones.each do |zone|%>
        <li><a class="lalong" data-lat="<%= zone.lat %>" data-long="<%= zone.long %>"><%= zone.title %></a></li>
        <%end%>
      </ul>
    </div>
    <section class="panel">
      <header class="panel-heading">
        Mapa de Acapulco de Juárez Guerrero
        <span class="tools pull-right">
          <a href="javascript:;" class="fa fa-chevron-down"></a>
          <a href="javascript:;" class="fa fa-times"></a>
        </span>
      </header>
      <div class="panel-body">
        <div id="gmap-list"></div>
      </div>
    </section>
  </div>
</div>
<%end%>
<div class="row">
  <div class="col-md-3">
    <div class="mini-stat clearfix">
      <span class="mini-stat-icon green"><i class="fa fa-eye"></i></span>
      <div class="mini-stat-info">
        <span><%= @views_today %></span>
        Paginas vistas hoy
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="mini-stat clearfix">
      <span class="mini-stat-icon green"><i class="fa fa-eye"></i></span>
      <div class="mini-stat-info">
        <span><%= @views_monthly %></span>
        Paginas vistas este més
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="mini-stat clearfix">
      <span class="mini-stat-icon green"><i class="fa fa-eye"></i></span>
      <div class="mini-stat-info">
        <span><%= @views_year %></span>
        Paginas vistas este año
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="mini-stat clearfix">
      <span class="mini-stat-icon green"><i class="fa fa-eye"></i></span>
      <div class="mini-stat-info">
        <span><%= @views_monthly_celphone %></span>
        Disposíticos móviles mes
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading" >
        Vistas
        <span class="tools pull-right">
          <a href="javascript:;" class="fa fa-chevron-down"></a>
          <a href="javascript:;" class="fa fa-times"></a>
        </span>
      </header>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>Url</th>
                <th>Tipo de vista</th>
                <th>Datos de sistema</th>
              </tr>
            </thead>
            <tbody>
              <% @views_today_list.reverse.each do |list| %>
              <tr>
                <td><%= list.path%></td>
                <td><%= list.viewver_type%></td>
                <td><%= list.agent%></td>
              </tr>
              <%end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
</div>
<!-- page end-->
<!--common script init for all pages-->
<script>
SuperMapFilter(<%=@helps.html_safe%>, "16.8548671" , "-99.8979708", 13, '#gmap-list');
$(".lalong").click(function(){
  var latitude = $(this).data('lat');
  var longitude = $(this).data('long');
  $('#gmap-list').html('');
  SuperMapFilter(<%=@helps.html_safe%>, latitude , longitude, 17, '#gmap-list');
});
</script>