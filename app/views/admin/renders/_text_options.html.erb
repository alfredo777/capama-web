        </div>
      </div>
    </nav>
    <div class="wisywing-options" data-wysihtml5-dialog="createLink" style="display: none;">
      <label>
        Coloca un link:
        <input data-wysihtml5-dialog-field="href" value="http://">
      </label>
      <a data-wysihtml5-dialog-action="save" class="btn btn-default">Insertar</a>&nbsp;<a data-wysihtml5-dialog-action="cancel" class="btn btn-default">Cancelar</a>
    </div>
    <div style="display:none;">
    <div class="wisywing-options"  data-wysihtml5-dialog="insertImage"  style="display:none;">
      <label>
        Image:
        <input data-wysihtml5-dialog-field="src" id="image-input-up" value="http://">
      </label>
      <label>
        Align:
        <select data-wysihtml5-dialog-field="className">
          <option value="">default</option>
          <option value="wysiwyg-float-left">left</option>
          <option value="wysiwyg-float-right">right</option>
        </select>
      </label>
      <a  id="saveimage" data-wysihtml5-dialog-action="save">OK</a>
    </div>
    </div>
    
  </div>
  <%= text_area_tag "#{id}", '', class: "wysiwyg-area col-md-12"%>
</div>
</div>
<script>
$('#reset').click(function(){
$("#<%= id %>").val('');
});
var editor = new wysihtml5.Editor("<%= id %>", {
toolbar:      "toolbar",
stylesheets:  "/assets/text_decorations/wisywing-colors.css",
parserRules:  wysihtml5ParserRules
});
</script>