<div class="row">
  <div class="col-lg-12">
  <header class="panel-heading" >Clientes</header>
    <section class="panel">
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>Teléfono</th>
                <th>Dirección</th>
              </tr>
            </thead>
            <tbody>
              <% @customers.each do |user| %>
              <tr>
                <td><%= user.name%></td>
                <td><%= user.email%></td>
                <td><%= user.phone%></td>
                <td><%= user.address%></td>
                <td><%=  link_to 'Eliminar', destroy_customer_path(user.id), "data-confirm": "¿Estas seguro de querer eliminar este Cliente?" %></td>
              </tr>
              <%end%>
            </tbody>
          </table>
        </div>
        <%= will_paginate @customers, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </section>
</div>