<div class="row">
  <div class="col-lg-12">
  <header class="panel-heading" >Agregar zona</header>
  <section class="panel">
    <div class="panel-body">
      <%= form_tag create_zone_path, class: 'form-horizontal' do -%>
      <div class="col-md-4">
        <%= text_field_tag 'title', '', placeholder: "Título del filtro de zona", class: 'form-control', required: true %>
      </div>
      <div class="col-md-3">
        <%= text_field_tag 'lat', '', placeholder: "Latitud", class: 'form-control', required: true %>
      </div>
      <div class="col-md-3">
        <%= text_field_tag 'long', '', placeholder: "Longitud", class: 'form-control', required: true %>
      </div>
      <%= submit_tag "Crear Zona", class: "btn btn-primary" %>
      <%end%>
    </div>
  </section>
</div>
</div>
<div class="row">
<div class="col-lg-12">
<header class="panel-heading" >Filtros de zona creados</header>
<section class="panel">
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Título</th>
            <th>Latitud</th>
            <th>Lóngitud</th>
          </tr>
        </thead>
        <tbody>
          <% @zones.reverse.each do |zone| %>
          <tr>
            <td><%= zone.title%></td>
            <td><%= zone.lat%></td>
            <td><%= zone.long%></td>
            <td><%=  link_to 'Eliminar', destroy_zone_path(id: zone.id), "data-confirm": "¿Estas seguro de querer eliminar esta zona?" %></td>
          </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>
</section>
</div>