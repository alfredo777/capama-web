<div class="row">
  <div class="col-lg-12">
  <header class="panel-heading" >Lista de inspecciones</header>
  <section class="panel">
    <div class="panel-body">
      <div class="panel-body">
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Dirección</th>
                  <th>Inconformidad</th>
                  <th>Cuenta</th>
                  <th>Medidor</th>
                  <th>Exportar</th>
                </tr>
              </thead>
              <tbody>
              <% @inspects.each do |inspect|%>
              <tr>
                <td><%= inspect.name %></td>
                <td><%= inspect.address%></td>
                <td><%= inspect.inconforme%></td>
                <td><%= inspect.acount%></td>
                <td><%= inspect.meter%></td>
                <td><%= link_to "Exportar Toda la inspección", export_inspect_path(id: inspect.id, :format => :xls) %></td>
              </tr>
              <%end%>
              </tbody>
            </table>
          </div>
      <%= will_paginate @inspects, renderer: BootstrapPagination::Rails %>
    </div>
  </section>
  </div>
</div>