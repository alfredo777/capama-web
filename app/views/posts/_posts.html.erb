<div class="col-md-12">
  <%= will_paginate posts, renderer: BootstrapPagination::Rails %>
  <div class="row">
    <% posts.each do |post|%>
    <div class="col-md-6">
      <aside class="profile-nav alt">
        <section class="panel">
          <div class="wdgt-row">
            <% if !post.head_image? %>
            <%= image_tag('post-head.png', width: 404, height: 202)%>
            <%else%>
            <%= image_tag(post.head_image, width: 404, height: 202)%>
            <%end%>
          </a>
          <h1><%= "No name" if post.title.blank? %><%= truncate(post.title, length: 45) if !post.title.blank? %></h1>
          <p>Autor: <%= post.user.name %></p>
        </div>
        <ul class="nav nav-pills nav-stacked">
          <!--<li><a href="javascript:;"> <i class="fa fa-commenting-o"></i> Comentarios <span class="badge label-success pull-right r-activity">10</span></a></li>-->
          <li><a> <i class="fa fa-line-chart"></i> Visitas <span class="badge label-danger pull-right r-activity"><%=   post.blog_acces_open %></span></a></li>
          <li><%= link_to post_path(post.id) do %> <i class="fa fa-eye"></i> Ver <%end%></li>
          <li><%= link_to edit_post_path(post.id) do %><i class="fa fa-pencil"></i> Editar <%end%></li>
          <li><%= link_to destroy_post_path(id: post.id), "data-confirm": "Â¿Estas seguro de querer eliminar este Post?" do %> <i class="fa fa-trash-o"></i> Eliminar Post<%end%></li>
        </ul>
      </section>
    </aside>
  </div>
  <%end%>
</div>
<%= will_paginate posts, renderer: BootstrapPagination::Rails %>
</div>