<div class="row">
  <div class="col-lg-12">
  <header class="panel-heading" >Nuevo usuario</header>
  <section class="panel">
    <div class="panel-body">
      <div class="position-center">
        <%= form_tag update_user_path(@user.id), :multipart => true, class: 'form-horizontal' do -%>
        <div class="form-group ">
          <%= render partial: '/users/avatar', locals: {user: @user} %>
          <label>Nombre</label><br/>
          <%= text_field_tag "name","#{@user.name}" ,placeholder: 'Nombre', class: 'col-md-6 form-control' %><br/><br/>
          <label>ID</label><br/>
          <%= text_field_tag "card", "#{@user.card}" , placeholder: 'ID Número de identificación interno', class: 'col-md-6 form-control' %><br/><br/>
          <label>Email</label><br/>
          <%= text_field_tag "email","#{@user.email}" ,placeholder: 'Email', class: 'col-md-6 form-control'%><br/><br/>
          <label>Teléfono</label> <br/>
          <%= text_field_tag "phone", "#{@user.phone}",placeholder: 'Teléfono', class: 'col-md-6 form-control'%><br/><br/>
          <label>Contraseña</label><br/>
          <%= password_field_tag "password",  "#{@user.password}" ,placeholder: 'Contraseña', class: 'col-md-6 form-control' %><br/><br/>
          <%= hidden_field_tag "actual_password",  "#{@user.password}" ,placeholder: 'Contraseña', class: 'col-md-6 form-control' %>
          <label>Rol</label><br/>
          <%= select_tag "role", options_from_collection_for_select(@roles, "id", "title"), class: 'col-md-4 form-control' %>
        </div>
        <br/>
        <%= submit_tag 'Editar usuario', class: 'btn btn-primary pull-right' %>
        <%end%>
      </div>
    </div>
  </section>
</div>