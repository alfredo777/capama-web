<div class="container">
  <%= form_tag session_create_user_path, class: 'form-signin' do %>
  <h2 class="form-signin-heading">INGRESO</h2>
  <div class="login-wrap">
    <div class="user-login-info">
      <%= text_field_tag 'card', 'jo1341', placeholder: 'ID', class: "form-control"%>
      <%= password_field_tag 'password', '', placeholder:  'Contraseña', class: "form-control" %><br/><br/>
    </div>
    <label class="checkbox">
      <input type="checkbox" value="remember-me"> Recordarme
      <span class="pull-right">
        <a data-toggle="modal" href="#myModal"> ¿Olvidaste tu contraseña?</a>
      </span>
    </label>
    <%= submit_tag 'Ingresar', class: 'btn btn-lg btn-login btn-block' %>
  </div>
  <!-- Modal -->
  <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Forgot Password ?</h4>
        </div>
        <div class="modal-body">
          <p>Enter your e-mail address below to reset your password.</p>
          <input type="text" name="email" placeholder="Email" autocomplete="off" class="form-control placeholder-no-fix">
        </div>
        <div class="modal-footer">
          <button data-dismiss="modal" class="btn btn-default" type="button">Cancel</button>
          <button class="btn btn-success" type="button">Submit</button>
        </div>
      </div>
    </div>
  </div>
  <!-- modal -->
  <%end%>
</div>