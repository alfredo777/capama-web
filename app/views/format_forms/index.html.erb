<div class="row">
  <div class="col-lg-12">
  <header class="panel-heading" >Formatos</header>
  <section class="panel">
    <div class="panel-body">
      <%= link_to 'Nuevo formato', new_format_form_path, class: "btn btn-default" %>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th>Public</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @format_forms.each do |format_form| %>
            <tr>
              <td><%= format_form.title %></td>
              <td><%= format_form.description %></td>
              <td><%= format_form.public %></td>
              <td><%= link_to 'Ver', format_form %></td>
              <td><%= link_to 'Eliminar', format_form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <br>
    </div>
  </section>
</div>
</div>